<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<HBox fx:id="playerInfoBar" alignment="CENTER_LEFT" onMouseEntered="#active" onMouseExited="#inactive" prefHeight="54.0" prefWidth="748.0" style="-fx-background-color: rgba(50, 200, 200, 0.2); -fx-spacing: 1;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Project.controller_classes.TradeInfoBarController">
    <children>
        <Label fx:id="playerName" alignment="CENTER" prefHeight="30.0" prefWidth="270.0" style="-fx-text-fill: black; -fx-label-padding: 5;" text="Player Name Toky Tahmid Sami">
            <font>
                <Font name="Helvetica Bold" size="14.0" />
            </font>
        </Label>
      <TextField fx:id="playerPriceInput" prefHeight="26.0" prefWidth="216.0" promptText="Player Price" style="-fx-border-color: white;" stylesheets="@../css_files/promptBoxes.css">
         <cursor>
            <Cursor fx:constant="TEXT" />
         </cursor>
      </TextField>
      <AnchorPane prefHeight="43.0" prefWidth="260.0">
         <children>
            <Button fx:id="button" alignment="CENTER" layoutX="43.0" layoutY="6.0" maxHeight="43.0" mnemonicParsing="false" onAction="#processTrade" prefHeight="43.0" prefWidth="174.0" style="-fx-max-height: 4; -fx-font-size: 13;" stylesheets="@../css_files/loginButtons.css" text="Button" textAlignment="CENTER" wrapText="true">
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
         </children>
      </AnchorPane>
    </children>
</HBox>
